{
  "name": "Overlay",
  "version": "1.0.0",
  "description": "Overlay for stream twitch",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "electron .",
    "build": "electron-builder"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/FomkaWyverno/OverlayJS.git"
  },
  "keywords": [
    "node.js",
    "web",
    "overlay",
    "twitch"
  ],
  "author": "Fomka_Wyverno",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/FomkaWyverno/OverlayJS/issues"
  },
  "homepage": "https://github.com/FomkaWyverno/OverlayJS#readme",
  "devDependencies": {
    "electron": "^23.1.2",
    "electron-builder": "^23.6.0"
  },
  "build": {
    "appId": "ua.wyverno",
    "productName": "W-Chat",
    "directories": {
      "output": "dist"
    },
    "files": [
      "core/**/*",
      "index.js"
    ],
    "extraFiles": [
      "core"
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "uninstallDisplayName": "uninstall",
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "icon.ico",
      "multiLanguageInstaller": true,
      "displayLanguageSelector": true
    }
  }
}